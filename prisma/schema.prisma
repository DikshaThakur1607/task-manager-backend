datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Your models stay the same below...
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  // This line tells Prisma that a user can own multiple tasks
  tasks     Task[]
}

model Task {
  id        String   @id @default(uuid())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  
  // These lines create the "Relationship"
  userId    String
  author    User     @relation(fields: [userId], references: [id])
}